<?xml version="1.0" encoding="UTF-8"?>

<tns:views xmlns:tns="http://www.example.org/SPAForms" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.example.org/SPAForms"
channels="ANYCHANNEL" directory="entity">


<tns:view name="EntityDetail" title="Entity" stateAsParam="true" modelClass="com.erpx.entity.bean.Entity">
    <tns:states inheritPredefinedState="baseViewState">
    </tns:states>

    <tns:variables>
    	<tns:variable variableName="parameter" typeName="com.erpx.entity.bean.Entity"/>
        <tns:variable variableName="listado" typeName="com.erpx.entity.bean.Entity" esListado="true"/>    	    	    	   
    </tns:variables>
    
    <tns:controllerDefinitions>
      <tns:controllerDefinition name="EntityList">
        <tns:param localVariable="listado" input="false" output="true"/>
      </tns:controllerDefinition>
    </tns:controllerDefinitions>

	<tns:parameters>
		<tns:param name="id" localVariable="parameter" localVariablePath="id" input="true"/>
	</tns:parameters>	

   <tns:onInit>
   </tns:onInit>
	
	<tns:tabs>
	   <tns:tab>
		<tns:form title="detalle de cliente">
			<tns:row>
			   <tns:fields>			     			      			      
			      <tns:field label="cod persona" name="lblCodPersona" localVariable="parameter" localVariablePath="id" ></tns:field>
			      <tns:field label="primer nombre" name="lblNom1persona" localVariable="parameter" localVariablePath="name1" ></tns:field>
			      <tns:field label="segundo nombre" name="lblNom2Persona" localVariable="parameter" localVariablePath="name2" ></tns:field>
			      <tns:field label="primer apellido" name="lblape1persona" localVariable="parameter" localVariablePath="surname1" ></tns:field>
			      <tns:field label="segundo apellido" name="lblape2persona" localVariable="parameter" localVariablePath="surname2" ></tns:field>			      
			   </tns:fields>
			</tns:row>
			<tns:row>
			   <tns:fields>			             
	             <tns:field label="direccion default" name="txtDireccionDefault" localVariable="parameter" localVariablePath="defaultAddress" ></tns:field>	
	             <tns:field label="fecha nacimiento" name="dtFechaNacimiento" localVariable="parameter" localVariablePath="birthDate" ></tns:field>
	             <tns:field label="fecha fundacion" name="dtFoundationDate" localVariable="parameter" localVariablePath="foundationDate" ></tns:field>
	             <tns:field label="exento de impuestos" name="chktaxExtent" localVariable="parameter" localVariablePath="taxExtent" ></tns:field>
			   </tns:fields>
			</tns:row>
		</tns:form>	   
	   </tns:tab>
       <tns:tab>
         <tns:form title="listado">
           <tns:row>
		   <tns:table name="tabla" selectedValue="seleccionado" localVariable="listado">
		    <tns:column title="correlativo" path="id"></tns:column>		    
		   	<tns:column title="nombre1" path="name1"></tns:column>
			<tns:column title="nombre2" path="name2"></tns:column>		
			<tns:column title="apellido1" path="surname1"></tns:column>	
			<tns:column title="apellido2" path="surname2"></tns:column>
			<tns:column title="fecha nac" path="birthDate"></tns:column>
			 			 			
		   </tns:table>
		   </tns:row>
         </tns:form>
       </tns:tab>
	   	   	   
	</tns:tabs>

	
</tns:view>	

 </tns:views>